{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "noEmit": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "context/*": ["src/context/*"],
      "pages/*": ["src/pages/*"],
      "layout/*": ["src/layout/*"],
      "utils/*": ["src/utils/*"],
      "types/*": ["src/types/*"],
      "data/*": ["src/data/*"],
      "themes/*": ["src/themes/*"],
      "menu-items/*": ["src/menu-items/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
